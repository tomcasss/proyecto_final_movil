<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyecto_final_movil.LoginPage"
             Title="LoginPage"
             BackgroundColor="#F5F5F5">
        <Grid>
        <!-- Logo de la empresa en esquina superior derecha -->
        <Image Source="logo.png"
               WidthRequest="80"
               HeightRequest="80"
               HorizontalOptions="End"
               VerticalOptions="Start"
               Margin="0,20,20,0"/>

    <!-- Contenido principal -->
    <VerticalStackLayout VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Padding="30"
                           Spacing="20">

        <!-- Imagen de perfil/login -->
        <Image Source="login_image.png"
                   WidthRequest="150"
                   HeightRequest="150"
                   Margin="0,0,0,20"/>

        <!-- Título -->
        <Label Text="Iniciar Sesión"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="#333333"/>

        <!-- Campo de usuario -->
        <Border Stroke="#CCCCCC"
                    StrokeThickness="1"
                    Padding="0"
                    BackgroundColor="Transparent">
            <Entry x:Name="UsuarioEntry"
                       Placeholder="Usuario o Email"
                       PlaceholderColor="#999999"
                       TextColor="#333333"
                       FontSize="16"
                       Margin="15,10"/>
        </Border>

        <!-- Campo de contraseña -->
        <Border Stroke="#CCCCCC"
                    Padding="0"
                    BackgroundColor="Transparent">
            <Entry x:Name="ContraseñaEntry"
                       Placeholder="Contraseña"
                       IsPassword="True"
                       PlaceholderColor="#999999"
                       TextColor="#333333"
                       FontSize="16"
                       Margin="15,10"/>
        </Border>

        <!-- Botón de login -->
        <Button Text="INICIAR SESIÓN"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnLoginClicked"/>

        <!-- Separador -->
        <BoxView HeightRequest="1"
                     Color="#DDDDDD"
                     Margin="0,10,0,10"/>

        <!-- Texto y enlace para registrarse -->
        <HorizontalStackLayout HorizontalOptions="Center"
                                  Spacing="5">
            <Label Text="¿Eres nuevo?"
                       TextColor="#666666"
                       FontSize="14"
                       VerticalOptions="Center"/>
            <Label Text="Regístrate"
                       TextColor="#007ACC"
                       FontSize="14"
                       FontAttributes="Bold"
                       VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRegistrarseClicked"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>

    </VerticalStackLayout>
    </Grid>

</ContentPage>
