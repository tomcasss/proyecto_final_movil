        <!-- Lista de Lugares -->
        <ScrollView Grid.Row="1" Padding="15">
            <StackLayout Spacing="15">

                <!-- Lugar 1: Parque Nacional -->
                <Frame BackgroundColor="White"
                   Padding="0"
                   CornerRadius="15"
                   HasShadow="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Frame Grid.Row="0"
						   CornerRadius="15"
						   Padding="0"
						   HasShadow="False"
