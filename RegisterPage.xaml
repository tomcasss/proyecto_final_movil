<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyecto_final_movil.RegisterPage"
             Title="RegisterPage"
             BackgroundColor="#F5F5F5">
    <Grid>
        <!-- Logo de la empresa en esquina superior derecha -->
        <Image Source="logo.png"
            WidthRequest="80"
            HeightRequest="80"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,20,20,0"/>

        <!-- Contenido principal -->
        <ScrollView>
            <VerticalStackLayout VerticalOptions="Center"
                            HorizontalOptions="Center"
                            Padding="30"
                            Spacing="20"
                            Margin="0,50,0,0">

                <!-- Imagen de registro -->
                <Image Source="registro_image.png"
                    WidthRequest="120"
                    HeightRequest="120"
                    Margin="0,0,0,20"/>

                <!-- Título -->
                <Label Text="Crear Cuenta"
                    FontSize="28"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    TextColor="#333333"/>

                <!-- Campo de nombre -->
                <Border Stroke="#CCCCCC"
                     StrokeThickness="1"
            
                     Padding="0"
                     BackgroundColor="Transparent">
                    <Entry x:Name="NombreEntry"
                        Placeholder="Nombre completo"
                        PlaceholderColor="#999999"
                        TextColor="#333333"
                        FontSize="16"
                        Margin="15,10"/>
                </Border>

                <!-- Campo de email -->
                <Border Stroke="#CCCCCC"
                     StrokeThickness="1"
                     
                     Padding="0"
                     BackgroundColor="Transparent">
                    <Entry x:Name="EmailEntry"
                        Placeholder="Email"
                        Keyboard="Email"
                        PlaceholderColor="#999999"
                        TextColor="#333333"
                        FontSize="16"
                        Margin="15,10"/>
                </Border>

                <!-- Campo de usuario -->
                <Border Stroke="#CCCCCC"
                     StrokeThickness="1"
                    
                     Padding="0"
                     BackgroundColor="Transparent">
                    <Entry x:Name="UsuarioEntry"
                        Placeholder="Usuario"
                        PlaceholderColor="#999999"
                        TextColor="#333333"
                        FontSize="16"
                        Margin="15,10"/>
                </Border>

                <!-- Campo de contraseña -->
                <Border Stroke="#CCCCCC"
                     StrokeThickness="1"
                   
                     Padding="0"
                     BackgroundColor="Transparent">
                    <Entry x:Name="ContraseñaEntry"
                        Placeholder="Contraseña"
                        IsPassword="True"
                        PlaceholderColor="#999999"
                        TextColor="#333333"
                        FontSize="16"
                        Margin="15,10"/>
                </Border>

                <!-- Campo de confirmar contraseña -->
                <Border Stroke="#CCCCCC"
                     StrokeThickness="1"
                   
                     Padding="0"
                     BackgroundColor="Transparent">
                    <Entry x:Name="ConfirmarContraseñaEntry"
                        Placeholder="Confirmar contraseña"
                        IsPassword="True"
                        PlaceholderColor="#999999"
                        TextColor="#333333"
                        FontSize="16"
                        Margin="15,10"/>
                </Border>

                <!-- Botón de registro -->
                <Button Text="REGISTRARSE"
                     BackgroundColor="#28A745"
                     TextColor="White"
                     FontAttributes="Bold"
                     FontSize="16"
                     CornerRadius="10"
                     HeightRequest="50"
                     Clicked="OnRegistrarClicked"/>

                <!-- Separador -->
                <BoxView HeightRequest="1"
                      Color="#DDDDDD"
                      Margin="0,10,0,10"/>

                <!-- Texto y enlace para volver al login -->
                <HorizontalStackLayout HorizontalOptions="Center"
                                   Spacing="5">
                    <Label Text="¿Ya tienes cuenta?"
                        TextColor="#666666"
                        FontSize="14"
                        VerticalOptions="Center"/>
                    <Label Text="Inicia sesión"
                        TextColor="#007ACC"
                        FontSize="14"
                        FontAttributes="Bold"
                        VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnVolverLoginClicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>